@page
@model PrivacyModel
@{
    ViewData["Title"] = "Privacy Policy";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <style>
        body {
            background-color: #00537A;
        }

        .form-container {
            background-color: #fff;
            border: 1px solid #00537A;
            border-radius: 10px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.19), 0 6px 6px rgba(0, 0, 0, 0.23);
            margin: 100px auto;
            max-width: 500px;
            padding: 30px;
        }

        .form-header {
            text-align: center;
            color: #00537A;
            margin-bottom: 30px;
        }

            .form-header h1 {
                font-size: 36px;
                font-weight: bold;
            }

        .form-control {
            background-color: #e6d3ae;
            border-color: #00537A;
            color: #00537A;
            border-radius: 10px;
            padding: 10px;
            font-size: 16px;
        }

            .form-control:focus {
                box-shadow: 0 0 0 0.2rem rgba(245, 162, 1, 0.25);
            }

        .btn-submit {
            background-color: #F5A201;
            border-color: #F5A201;
            color: #fff;
            border-radius: 10px;
            padding: 10px 20px;
            font-size: 18px;
            font-weight: bold;
            transition: all 0.5s;
            margin-top: 20px;
            display: block;
            margin: 0 auto;
        }

            .btn-submit:hover {
                background-color: #fff;
                color: #F5A201;
                cursor: pointer;
            }

        .btn-signup {
            background-color: #e6d3ae;
            border-color: #00537A;
            color: #00537A;
            border-radius: 10px;
            padding: 10px 20px;
            font-size: 18px;
            font-weight: bold;
            transition: all 0.5s;
            margin-top: 20px;
            display: block;
            margin: 0 auto;
        }

            .btn-signup:hover {
                background-color: #00537A;
                color: #e6d3ae;
                cursor: pointer;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="form-container">
            <div class="form-header">
                <h1>PanterBank</h1>
            </div>
            <form>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Username">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Password">
                </div>
                <div class="form-group" style="display:flex;">
                    <button type="submit" class="btn btn-submit">Login</button>
                    <button type="submit" class="btn btn-submit item" >Sign Up</button>
                </div>
            </form>
        </div>
    </div>
    <style>
        .item {
            margin:0 0 0 0;
        }

    </style>
</body>
</html>
